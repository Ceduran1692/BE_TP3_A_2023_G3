<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:flow_horizontalAlign="center"
    tools:context=".ui.views.fragments.LoginFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondologin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="115dp"
                android:background="#3330e5 "
                android:fontFamily="sans-serif-black"
                android:text="Premier"
                android:textColor="@color/white"
                android:textSize="38dp"
                app:lineHeight="45.6dp" />

            <TextView
                android:id="@+id/titulo2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="115dp"
                android:background="#ffcc00"
                android:fontFamily="sans-serif-black"
                android:text="RentCar"
                android:textColor="#001D42"
                android:textSize="38dp"
                app:lineHeight="45.6dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="354dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="133dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            android:textAlignment="center"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="354dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="31dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:inputType="textPassword"
            android:text="passwordLarga"
            android:textAlignment="center"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="145dp"
            android:layout_height="21dp"
            android:layout_gravity="center"
            android:layout_marginTop="9dp"
            android:text="Olvide la contrasenia"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="206dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="67dp"
            android:backgroundTint="#212121"
            android:fontFamily="sans-serif-black"
            android:text="INGRESAR"
            app:cornerRadius="74dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>