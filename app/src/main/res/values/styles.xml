<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HomeCardsText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lineHeight">30sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0</item>
    </style>
    <style name="FiltroText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">9sp</item>
        <item name="android:lineHeight">11sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">-0.05</item>
    </style>
    <style name="SearchContentText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#A8A8A8</item>
        <item name="android:text">@string/search_content</item>
    </style>
    <style name="MarcasText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineHeight">29sp</item>
        <item name="android:letterSpacing">-0.03</item>
        <item name="android:textColor">#0D0D0D</item>
    </style>
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColorHint">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/home_search_background</item>
        <item name="android:queryBackground">@null</item>
    </style>

    <style name="CarPropertiesCardText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NameProfile" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="LettersProfileSetting" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="NotificacionesYGenerales" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue_generales</item>
    </style>
    <style name="CarCardShape" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
    <style name="HomeCardShape" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="elevation">15dp</item>
    </style>
</resources>